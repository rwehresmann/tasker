<% @lists.each do |list| %>
  <div class="row justify-content-center my-3">
    <div class="col-10 col-lg-8">
      <div class="card">
        <div class="card-header"><%= list.name %></div>
        <div class="card-body p-0">
          <div class="list-group list-group-flush">
            <% list.tasks.incomplete_first.each do |task| %>
              <% if task.complete? %>
                <div class="list-group-item">
                  <del>
                    <%= task.name %>
                  </del>
                </div>
              <% else %>
                <div class="list-group-item">
                  <div class="custom-control custom-checkbox">
                    <input type="checkbox" class="custom-control-input" id="<%= dom_id(task) %>">
                    <label for="<%= dom_id(task) %>" class="custom-control-label"><%= task.name %></label>
                  </div>
                </div>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
